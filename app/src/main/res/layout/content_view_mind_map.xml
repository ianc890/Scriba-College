<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_mind_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.scriba.scribacollege.activity.ViewMindMapActivity"
    tools:showIn="@layout/activity_view_mind_map">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Root"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="200sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/root" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="1"
        android:layout_alignBaseline="@+id/leafTwo"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafOne" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:text="2"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafTwo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="3"
        android:layout_alignBaseline="@+id/leafTwo"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafThree" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="4"
        android:layout_alignBaseline="@+id/root"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafFour" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="5"
        android:layout_alignBaseline="@+id/root"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafFive" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/leafSeven"
        android:layout_below="@+id/root"
        android:text="6"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafSix" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_below="@+id/root"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120sp"
        android:text="7"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafSeven" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/leafSeven"
        android:layout_alignParentRight="true"
        android:text="8"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/leafEight" />

</RelativeLayout>
