<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.scriba.scribacollege">

    <uses-sdk tools:overrideLibrary="no.nordicsemi.android.scriba,         com.google.android.gms.wearable,com.google.android.gms.base,         com.google.android.gms,no.nordicsemi.android.support.v18.scanner,no.nordicsemi.android.log,         no.nordicsemi.android.scriba.common,no.nordicsemi.android.dfu" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/scriba_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ScribaCollegeAppTheme"
        tools:replace="android:theme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SignupActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/ScribaCollegeAppTheme.NoActionBar" />
        <activity
            android:name=".activity.FilesActivity"
            android:label="@string/title_activity_files"
            android:theme="@style/ScribaCollegeAppTheme.NoActionBar" />
        <activity
            android:name=".activity.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:theme="@style/ScribaCollegeAppTheme.NoActionBar" />
        <activity android:name=".FingerPaint" />
        <activity android:name=".activity.ProfileActivity" />
        <activity
            android:name=".activity.MyFilesActivity"
            android:label="@string/title_files" />
        <activity
            android:name=".activity.UploadActivity"
            android:label="@string/title_activity_upload"
            android:theme="@style/ScribaCollegeAppTheme.NoActionBar" />
        <activity
            android:name=".activity.QuizQuestionsActivity"
            android:label="@string/title_activity_quiz_questions"
            android:theme="@style/ScribaCollegeAppTheme" />
        <activity
            android:name=".activity.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:theme="@style/ScribaCollegeAppTheme" />
        <activity
            android:name=".activity.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/ScribaCollegeAppTheme" />
        <activity
            android:name=".activity.StudyPlanActivity"
            android:label="@string/title_activity_study_plan"
            android:theme="@style/ScribaCollegeAppTheme" />
        <activity
            android:name=".activity.CreateStudyPlanActivity"
            android:label="@string/title_activity_create_study_plan"
            android:theme="@style/ScribaCollegeAppTheme" />
        <activity
            android:name=".activity.ChatbotActivity"
            android:label="@string/title_activity_chatbot"
            android:theme="@style/ScribaCollegeAppTheme" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/ScribaCollegeAppTheme" />
        <activity
            android:name=".activity.MindMapActivity"
            android:label="@string/title_activity_mind_map"
            android:theme="@style/ScribaCollegeAppTheme"></activity>
    </application>

</manifest>